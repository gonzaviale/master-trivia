<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Preguntas sugeridas</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/estilos.css?v=1.0.1">
</head>
<body>

<div class="div-volver">
    <a href="/" class="bottonA">
        Volver
    </a>
</div>
<div class="container">
    <h1>Preguntas sugeridas</h1>
    <div class="table-responsive">
        <table>
            <thead>
            <tr>
                <th style="width: 200px">Id</th>
                <th style="width: 200px">Id categoria</th>
                <th style="width: 200px">Pregunta</th>
                <th style="width: 200px">Respuesta correcta</th>
                <th style="width: 200px">Respuesta incorrecta 1</th>
                <th style="width: 200px">Respuesta incorrecta 2</th>
                <th style="width: 200px">Respuesta incorrecta 3</th>
                <th style="width: 200px">Acciones</th>
            </tr>
            </thead>
            <tbody>
            {{#sugeridas}}
                <tr>
                    <td style="width: 200px">{{id}}</td>
                    <td style="width: 200px">{{categoria_id}}</td>
                    <td style="width: 200px">{{pregunta}}</td>
                    <td style="width: 200px">{{respuesta_correcta}}</td>
                    <td style="width: 200px">{{incorrecta_1}}</td>
                    <td style="width: 200px">{{incorrecta_2}}</td>
                    <td style="width: 200px">{{incorrecta_3}}</td>
                    <td style="width: 200px"><a href="/editor/aceptarSugerida/id={{id}}">Aceptar</a></td>
                    <td style="width: 200px"><a href="/editor/rechazarSugerida/id={{id}}">Rechazar</a></td>

                </tr>
            {{/sugeridas}}
            </tbody>
        </table>
    </div >
</div>

</body>
</html>