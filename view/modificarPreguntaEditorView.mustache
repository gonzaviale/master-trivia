<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Modificar pregunta</title>
    <link rel="stylesheet" href="/public/estilos.css?v=1.0.1">
</head>
<body>
<div class="container">

    {{#pregunta}}
        <form action="/modificarPreguntaEditor/procesarModificar/id={{id}}" method="post">
            <div class="form-group">
                <label for='categoria' class="labelinput">Categor√≠a:</label>
                <select name="categoria" id="categoria" class="inputsAreaRegister" required>
                    <option value="{{id_categoria}}" selected>{{categoria}}</option>
                    <option value="1" name="1">Geografia</option>
                    <option value="2" name="2">Historia</option>
                    <option value="3" name="3">Ciencia</option>
                    <option value="4" name="4">Deportes</option>
                </select>
            </div>

            <div class="form-group">
                <label class="labelinput" for='pregunta'>Pregunta:</label>
                <input class="inputsAreaRegister" type="text" name="pregunta" id="pregunta" value="{{pregunta}}" required>
            </div>


            <div class="form-group">
                <label class="labelinput" for='respuesta_correcta'>Respuesta correcta:</label>
                <input class="inputsAreaRegister" type="text" name="respuesta_correcta" id="respuesta_correcta" value="{{respuesta_correcta}}" required>
            </div>


            <div class="form-group">
            <label class="labelinput" for='incorrecta_1'>Respuesta incorrecta:</label>
            <input class="inputsAreaRegister" type="text" name="incorrecta_1" id="incorrecta_1" value="{{incorrecta_1}}" required>
            </div>


            <div class="form-group">
                <label class="labelinput" for='incorrecta_2'>Respuesta incorrecta:</label>
                <input class="inputsAreaRegister" type="text" name="incorrecta_2" id="incorrecta_2" value="{{incorrecta_2}}" required>
            </div>


            <div class="form-group">
                <label class="labelinput" for='incorrecta_3'>Respuesta incorrecta:</label>
                <input class="inputsAreaRegister" type="text" name="incorrecta_3" id="incorrecta_3" value="{{incorrecta_3}}" required>
            </div>


            <input type="submit" class="button-register" value="Enviar">
        </form>
    {{/pregunta}}

    {{#error}}
        <div class="error">{{error}}</div>
    {{/error}}

    <div>
        <a href="/modificarPreguntaEditor/get" class="bottonA">
            Volver
        </a>
    </div>
</div>
</body>
</html>